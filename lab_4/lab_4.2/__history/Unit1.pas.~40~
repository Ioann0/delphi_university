      Cells[1, i] := z.prod;
      Cells[2, i] := IntToStr(z.year_of_comm);
      Cells[3, i] := IntToStr(z.max_range);
      Cells[4, i] := IntToStr(z.num_of_pass_seats);
    end;
  until eof(f);
  //Form1.StringGrid1.RowCount := Form1.StringGrid1.RowCount - 1;


 Form1.Label3.Caption := 'Дополнение прошло успешно';
end;

procedure TForm1.N8Click(Sender: TObject);
Label NN;
Var
  t_name : string;
  i: integer;
begin
  writeln(FR, 'Поиск!');
  NN :
    if OKRightDlg1.ShowModal = mrOK then begin
      t_name := OKRightDlg1.Edit1.Text;

      if (FILTR(t_name) = '') or (FILTR(t_name) = '*название самолета*') then begin
        ShowMessagePos('Не данных для поиска', 100, 100);
        GOTO NN;
      end;

      Reset(f);
      Seek(f,0);
      i:=0;
      repeat
        t_name:= (FILTR(t_name));
        Read(f,z);

        if t_name = z.name then begin
         inc(i);
         With Form1.StringGrid4 do begin
            RowCount := RowCount + 1;
            Cells[0, i] := z.name;
            Cells[1, i] := z.prod;
            Cells[2, i] := IntToStr(z.year_of_comm);
            Cells[3, i] := IntToStr(z.max_range);
            Cells[4, i] := IntToStr(z.num_of_pass_seats);
        end;
          Form1.Label4.Caption := 'Запись найдена';
          Writeln(FR, 'Запись ', t_name, ' найдена');
          Exit;
        end;
      until eof(f);

    Form1.Label4.Caption := 'Запись не найдена';
    end;

end;

procedure TForm1.N9Click(Sender: TObject);
label NN;
var t_name: string;
    i: integer;
begin
NN:
  if OKRightDlg12.ShowModal = mrOK then begin
      t_name := OKRightDlg12.Edit1.Text;

      if (FILTR(t_name) = '') or (FILTR(t_name) = '*название самолета*') then begin
        ShowMessagePos('Нет ФИО для поиска', 100, 100);
        GOTO NN;
      end;
  end;
  delete(t_name);
  reset(f);
  i:=0;
      repeat
        Read(f,z);

         inc(i);
         With Form1.StringGrid5 do begin
            RowCount := RowCount + 1;
            Cells[0, i] := z.name;
            Cells[1, i] := z.prod;
            Cells[2, i] := IntToStr(z.year_of_comm);
            Cells[3, i] := IntToStr(z.max_range);
            Cells[4, i] := IntToStr(z.num_of_pass_seats);
        end;
      until eof(f);
    if flag = True then Form1.Label5.Caption := 'Название самолета ошибочно';

    Form1.Label5.Caption := 'Удаление произошло успешно';

end;

