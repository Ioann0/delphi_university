var f_name: string;
    i: integer;
begin
  if OpenDialog1.Execute then
    f_name:= OpenDialog1.FileName
  else begin
    ShowMessage('Отсутствует имя файла! Повторите Ввод');
    Exit;
  end;

 addition;
 reset(f);
 repeat
    Read(f, z);
    modul_lab_4_2.PRINT;
    //Writeln(frs, z.name, ' | ', z.prod, ' | ', IntToStr(z.year_of_comm), ' | ',
    //IntToStr(z.max_range), ' | ', IntToStr(z.num_of_pass_seats), ' | ');
    inc(i);
    With Form1.StringGrid3 do begin
      RowCount := RowCount + 1;
