{$R *.dfm}

Procedure Fill_Grid( sg : TStringGrid);
Begin
  With sg do begin
  ColCount := 5;
    Cells[0,0] := '                  Название';
    Cells[1,0] := '              Производитель';
    Cells[2,0] := '            Год ввода в строй';
    Cells[3,0] := '       Максимальная дальность';
    Cells[4,0] := ' Количество пассажирских мест';
  end;
End;

procedure TForm1.FormCreate(Sender: TObject);
begin
  AssignFile(frs, 'protocol.txt');  Rewrite(frs);
  Fill_Grid(Form1.StringGrid1);
  Fill_Grid(Form1.StringGrid2);
  Fill_Grid(Form1.StringGrid3);
  Fill_Grid(Form1.StringGrid4);
  Fill_Grid(Form1.StringGrid5);
//    With StringGrid1 do begin
//    ColCount := 5;
//    Cells[0,0] := '                  Название';
//    Cells[1,0] := '              Производитель';
//    Cells[2,0] := '            Год ввода в строй';
//    Cells[3,0] := '       Максимальная дальность';
//    Cells[4,0] := ' Количество пассажирских мест';
//    end;
end;

procedure TForm1.N10Click(Sender: TObject);
Var
  fi : textfile;
  fl_name : string;
begin

  if OpenDialog1.Execute then begin
    fl_name := OpenDialog1.FileName;
  end
  else begin
    ShowMessage('Вы не ввели имя файла! Повторите Ввод');
    Exit;
  end;
  assignfile(F, 'data.txt');
  assignfile(FR, 'results.txt');  rewrite(FR);
  creating();
  Form1.Label1.Caption := 'Типизированный файл создан';
  Writeln(frs, 'Типизированный файл создан');
  N1.Enabled:= False;
//  CloseFile(fi);
end;

procedure TForm1.N12Click(Sender: TObject);
var
  i: integer;
begin
  Reset(f);
  PSH;
  Writeln(frs, 'Типизированный файл прочитан:');
  //RowCount:= 1;
  repeat
    Read(f, z);
    modul_lab_4_2.PRINT;
    //Writeln(frs, z.name, ' | ', z.prod, ' | ', IntToStr(z.year_of_comm), ' | ',
    //IntToStr(z.max_range), ' | ', IntToStr(z.num_of_pass_seats), ' | ');
    inc(i);
    With Form1.StringGrid1 do begin
      RowCount := RowCount + 1;
      Cells[0, i] := z.name;
      Cells[1, i] := z.prod;
      Cells[2, i] := IntToStr(z.year_of_comm);
      Cells[3, i] := IntToStr(z.max_range);
      Cells[4, i] := IntToStr(z.num_of_pass_seats);
    end;
  until eof(f);
  //Form1.StringGrid1.RowCount := Form1.StringGrid1.RowCount - 1;
  CloseFile(f);
end;

procedure TForm1.N13Click(Sender: TObject);
Label MK;
Var
  t_name: string;
  new_year_of_comm: integer;
  i: integer;
  bl: boolean;
begin
  writeln(FR, '***Корректировка***');
  bl:= false;
  MK:
    if OKRightDlg.ShowModal = mrOK then begin
      t_name:= OKRightDlg.Edit1.Text;
      new_year_of_comm:= strtoint(OKRightDlg.Edit2.Text);

    if (t_name = '') or (t_name = '*название самолета*') then begin
        ShowMessagePos('Отсутствуют данные для модификации', 100, 100);
        GOTO MK;
    end;

      Reset(f);
      Seek(f,0);

      repeat
        t_name := Filtr(t_name);
        Read(f,z);

        if t_name = z.name then begin
          bl:= True;
          modul_lab_4_2.PRINT;
          z.year_of_comm:= new_year_of_comm;
          writeln(FR, 'Замена произведена: ');
          modul_lab_4_2.PRINT;
          seek(F, filepos(F)-1);
          write(F, Z);
          Writeln(frs, 'Запись ', t_name, ' скорректирована');
          Form1.Label2.Caption := 'Запись скорректирована';
        end;
      until eof(f);

      if bl = true then begin
        Seek(f,0);
        repeat
          Read(f, z);
          inc(i);
          With Form1.StringGrid2 do begin
            RowCount := RowCount + 1;
             Cells[0, i] := z.name;
             Cells[1, i] := z.prod;
             Cells[2, i] := IntToStr(z.year_of_comm);
             Cells[3, i] := IntToStr(z.max_range);
             Cells[4, i] := IntToStr(z.num_of_pass_seats);
          end;
        until eof(f);
    //    Form1.StringGrid4.RowCount := Form1.StringGrid4.RowCount - 1;
      end
      else begin
        Form1.Label2.Caption := 'Имя самолета ошибочно!';
        writeln(FR, 'Имя ошибочно!');
      end;
      CloseFile(f);
    end;
end;

